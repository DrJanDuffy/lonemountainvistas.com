{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-useless-escape": "warn",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "globals": {
    "gtag": "readonly",
    "Cerebras": "readonly",
    "getInteractionDepth": "readonly",
    "realScoutConfig": "readonly",
    "requestQueue": "readonly",
    "openLightbox": "readonly"
  }
}
